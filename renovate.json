{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":prHourlyLimit4",
    ":semanticCommits",
    ":prConcurrentLimit10",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true
    },
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "bump"
    },
    {
      "matchManagers": ["gomod"],
      "postUpdateOptions": [
        "gomodTidy"
      ]
    },
    {
      "groupName": "otel",
      "matchDatasources": [
        "go"
      ],
      "groupSlug": "otel",
      "matchPackageNames": [
        "go.opentelemetry.io/otel/**"
      ],
      "semanticCommitScope": "otel-deps",
      "semanticCommitType": "{{#if isPatch}}fix{{else}}feat{{/if}}"
    },
    {
      "groupName": "otel-contrib",
      "matchDatasources": [
        "go"
      ],
      "groupSlug": "otel-contrib",
      "matchPackageNames": [
        "go.opentelemetry.io/contrib/**"
      ],
      "semanticCommitScope": "otel-deps",
      "semanticCommitType": "{{#if isPatch}}fix{{else}}feat{{/if}}"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "separateMinorPatch": true
}
