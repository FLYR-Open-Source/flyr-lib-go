{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":prHourlyLimit4",
    ":semanticCommits",
    ":prConcurrentLimit10"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true
    },
    {
      "groupName": "otel",
      "matchDatasources": [
        "go"
      ],
      "groupSlug": "otel",
      "matchPackagePatterns": [
        "go.opentelemetry.io/.*"
      ],
      "semanticCommitScope": "{{otel-deps}}",
      "semanticCommitType": "{{#if isPatch}}fix{{else}}feat{{/if}}"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "separateMinorPatch": true
}
